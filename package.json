{
  "name": "anarchy_engine",
  "author": "S. Panfilov",
  "private": true,
  "version": "15.0.3",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "rimraf ./dist tsc && vite build",
    "before:release:check": "npm run ts:check && npm run prettier:check && npm run check:ts-morph && npm run lint && unit:coverage",
    "before:release": "npm run before:release:check && clean:reinstall && generate:license-report && generate:all-licenses-list",
    "preview": "vite preview",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prettier:staged": "pretty-quick --staged",
    "generate:schemas": "node ./utils/JsonUtils.js",
    "generate:schemas:minify": "node ./utils/JsonUtils.js --minify",
    "generate:license-report": "npm install -g license-report && license-report --only=prod --output=markdown > THIRD_PARTY_LICENSES.md",
    "generate:all-licenses-list": "yarn licenses generate-disclaimer > THIRD_PARTY_LICENSES_FULL.txt",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit",
    "unit": "vitest run",
    "unit:watch": "vitest",
    "unit:coverage": "vitest run --coverage",
    "unit:coverage:ui": "vitest --ui",
    "clean:all": "rimraf ./dist ./node_modules ./package-lock.json",
    "clean:reinstall": "npm run clean:all && npm install && git add ./package-lock.json",
    "check:no-spread-brand": "node configs/TsMorph/check-no-spread-brand.js ",
    "check:ts-morph": "npm run check:no-spread-brand",
    "check:ts-morph:fix": "npm run check:no-spread-brand -- --fix"
  },
  "dependencies": {
    "@dimforge/rapier3d": "0.16.0",
    "@rwh/keystrokes": "1.5.6",
    "ajv": "8.17.1",
    "animejs": "3.2.2",
    "date-fns": "4.1.0",
    "lil-gui": "0.20.0",
    "lodash-es": "4.17.21",
    "nanoid": "5.1.5",
    "rbush": "4.0.1",
    "rxjs": "7.8.2",
    "sanitize.css": "13.0.0",
    "stats.js": "0.17.0",
    "three": "0.176.0",
    "three-mesh-bvh": "0.9.0",
    "three-viewport-gizmo": "2.2.0",
    "ts-key-enum": "3.0.13",
    "typescript-fsm": "1.6.0"
  },
  "devDependencies": {
    "@dimforge/rapier3d-compat": "0.16.0",
    "@eslint/js": "9.25.1",
    "@types/animejs": "3.1.13",
    "@types/date-fns": "2.6.3",
    "@types/howler": "2.2.12",
    "@types/lodash-es": "4.17.12",
    "@types/node": "22.15.2",
    "@types/rbush": "4.0.0",
    "@types/three": "0.176.0",
    "@typescript-eslint/eslint-plugin": "8.31.0",
    "@typescript-eslint/parser": "8.31.0",
    "@vitest/coverage-v8": "3.1.2",
    "@vitest/ui": "3.1.2",
    "eslint": "9.25.1",
    "eslint-plugin-functional": "9.0.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-sort-export-all": "2.1.0",
    "eslint-plugin-spellcheck": "0.0.20",
    "husky": "4.3.8",
    "jsdom": "26.1.0",
    "prettier": "3.5.3",
    "pretty-quick": "4.1.1",
    "rimraf": "6.0.1",
    "ts-json-schema-generator": "2.4.0",
    "ts-morph": "25.0.1",
    "typescript": "5.8.3",
    "typescript-eslint": "8.31.0",
    "vite": "6.3.3",
    "vite-plugin-wasm": "3.4.1",
    "vitest": "3.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
