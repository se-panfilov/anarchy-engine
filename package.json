{
  "name": "anarchy_monorepo",
  "author": "S. Panfilov",
  "private": true,
  "version": "2.1.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "clean:all": "rimraf packages/**/package-lock.json -g packages/**/node_modules -g packages/**/dist -g apps/**/package-lock.json -g apps/**/node_modules -g  ./node_modules  ./package-lock.json ",
    "clean:all-metadate": "npm run e2e:clean-metadate --workspace=apps/showcases-e2e && npm run sanitize-assets --workspace=apps/showcases-desktop ** npm run sanitize-assets --workspace=apps/showcases-core && npm run sanitize-assets --workspace=packages/showcases-menu",
    "clean:all:restore": "git add ./package-lock.json && find packages -type d -name node_modules -prune -false -o -type f -name package-lock.json -exec git add {} +\n",
    "clean:reinstall": "npm run clean:all && npm install && npm run clean:all:restore",
    "generate:legal:3rd-party-licenses:all": "npm run generate:legal:showcases-core && npm run generate:legal:showcases-desktop && npm run generate:legal:showcases-e2e && npm run generate:legal:anarchy-engine && npm run generate:legal:anarchy-i18n && npm run generate:legal:anarchy-shared && npm run generate:legal:anarchy-legal && npm run generate:legal:showcases-menu && npm run generate:legal:showcases-shared",
    "generate:legal:3rd-party-licenses:anarchy-engine": "npm run -w anarchy-legal generate:licenses -- --workspace packages/anarchy-engine --out ../../packages/anarchy-engine/THIRD_PARTY_LICENSES.md",
    "generate:legal:3rd-party-licenses:anarchy-i18n": "npm run -w anarchy-legal generate:licenses -- --workspace packages/anarchy-i18n --out ../../packages/anarchy-i18n/THIRD_PARTY_LICENSES.md",
    "generate:legal:3rd-party-licenses:anarchy-legal": "npm run -w anarchy-legal generate:licenses -- --workspace anarchy-legal --out ./THIRD_PARTY_LICENSES.md",
    "generate:legal:3rd-party-licenses:anarchy-shared": "npm run -w anarchy-legal generate:licenses -- --workspace packages/anarchy-shared --out ../../packages/anarchy-shared/THIRD_PARTY_LICENSES.md",
    "generate:legal:3rd-party-licenses:showcases-core": "npm run -w anarchy-legal generate:licenses -- --workspace apps/showcases-core --out ../../apps/showcases-core/THIRD_PARTY_LICENSES.md",
    "generate:legal:3rd-party-licenses:showcases-desktop": "npm run -w anarchy-legal generate:licenses -- --workspace apps/showcases-desktop --out ../../apps/showcases-desktop/THIRD_PARTY_LICENSES.md",
    "generate:legal:3rd-party-licenses:showcases-e2e": "npm run -w anarchy-legal generate:licenses -- --workspace apps/showcases-e2e --out ../../apps/showcases-e2e/THIRD_PARTY_LICENSES.md",
    "generate:legal:3rd-party-licenses:showcases-menu": "npm run -w anarchy-legal generate:licenses -- --workspace packages/showcases-menu --out ../../packages/showcases-menu/THIRD_PARTY_LICENSES.md",
    "generate:legal:3rd-party-licenses:showcases-shared": "npm run -w anarchy-legal generate:licenses -- --workspace packages/showcases-shared --out ../../packages/showcases-shared/THIRD_PARTY_LICENSES.md",
    "generate:legal:files:all": "npm run generate:legal:files:showcases-core && npm run generate:legal:files:showcases-desktop && npm run generate:legal:files:showcases-e2e && npm run generate:legal:files:anarchy-engine && npm run generate:legal:files:anarchy-i18n && npm run generate:legal:files:anarchy-shared && npm run generate:legal:files:anarchy-legal && npm run generate:legal:files:showcases-menu && npm run generate:legal:files:showcases-shared",
    "generate:legal:files:anarchy-engine": "npm run -w anarchy-legal generate:files -- --workspace packages/anarchy-engine --out ../../packages/anarchy-engine  --debug",
    "generate:legal:files:anarchy-i18n": "npm run -w anarchy-legal generate:files -- --workspace packages/anarchy-i18n --out ../../packages/anarchy-i18n  --debug",
    "generate:legal:files:anarchy-legal": "npm run -w anarchy-legal generate:files -- --workspace anarchy-legal --out ../../anarchy-legal  --debug",
    "generate:legal:files:anarchy-shared": "npm run -w anarchy-legal generate:files -- --workspace packages/anarchy-shared --out ../../packages/anarchy-shared  --debug",
    "generate:legal:files:showcases-core": "npm run -w anarchy-legal generate:files -- --workspace apps/showcases-core --out ../../apps/showcases-core  --debug",
    "generate:legal:files:showcases-desktop": "npm run -w anarchy-legal generate:files -- --workspace apps/showcases-desktop --out ../../apps/showcases-desktop  --debug",
    "generate:legal:files:showcases-e2e": "npm run -w anarchy-legal generate:files -- --workspace apps/showcases-e2e --out ../../apps/showcases-e2e  --debug",
    "generate:legal:files:showcases-menu": "npm run -w anarchy-legal generate:files -- --workspace packages/showcases-menu --out ../../packages/showcases-menu  --debug",
    "generate:legal:files:showcases-shared": "npm run -w anarchy-legal generate:files -- --workspace packages/showcases-shared --out ../../packages/showcases-shared  --debug",
    "generate:legal:notice:showcases-core": "npm run -w anarchy-legal generate:notice -- --audit --workspace apps/showcases-core",
    "gitleaks:ci": "gitleaks detect --config=.gitleaks.toml --source=. --no-git --redact --report-format=json --report-path=reports/gitleaks-ci.json --verbose",
    "gitleaks:scan:files": "gitleaks detect --config=.gitleaks.toml --no-git --verbose --source=.",
    "gitleaks:scan:history": "gitleaks detect --config=.gitleaks.toml --report-format=table --verbose --source=.",
    "prettier": "prettier --write .",
    "prettier:changed": "git diff --name-only --diff-filter=ACMRTUXB HEAD | grep -E '\\.(ts|tsx|js|json|css|md)$' | xargs prettier --write",
    "prettier:check": "prettier --check .",
    "pretty-quick": "pretty-quick --staged"
  },
  "devDependencies": {
    "@eslint/js": "9.31.0",
    "@types/node": "24.0.13",
    "@typescript-eslint/eslint-plugin": "8.36.0",
    "@typescript-eslint/parser": "8.36.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "dotenv": "17.2.0",
    "eslint": "9.31.0",
    "eslint-plugin-functional": "9.0.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-sort-export-all": "2.1.0",
    "eslint-plugin-spellcheck": "0.0.20",
    "jsdom": "26.1.0",
    "lefthook": "1.12.2",
    "madge": "8.0.0",
    "prettier": "3.6.2",
    "pretty-quick": "4.2.2",
    "rimraf": "6.0.1",
    "rollup-plugin-visualizer": "6.0.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.36.0",
    "valibot": "1.1.0",
    "vite": "7.0.4",
    "vite-plugin-compression": "0.5.1",
    "vite-plugin-dts": "4.5.4",
    "vite-plugin-wasm": "3.5.0",
    "vitest": "3.2.4"
  }
}
