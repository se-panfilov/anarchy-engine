{
  "name": "showcases-desktop",
  "author": "S. Panfilov",
  "private": true,
  "version": "2.3.1",
  "description": "Anarchy Desktop Showcases  – a desktop wrapper-application for showcases-core.",
  "keywords": [
    "anarchy",
    "showcases",
    "anarchy-showcases",
    "desktop"
  ],
  "main": "dist/desktop-main.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "before:release": "npm run before:release:check && npm run sanitize-assets",
    "before:release:check": "npm run ts:check && npm run prettier:check && npm run lint",
    "build": "npm run reload-and-prebuild && npm run build:electron --",
    "build:mac": "npm run build -- --mac --x64 --arm64 --universal && npm run clean:postbuild",
    "build:win": "npm run build -- --win --x64 --arm64 && npm run clean:postbuild",
    "build:linux": "npm run build -- --linux --x64 --arm64 && npm run clean:postbuild",
    "build:all": "npm run build -- --mac --win --linux --x64 --arm64 --universal && npm run clean:postbuild",
    "build:dev": "npm run reload-and-prebuild && npm start",
    "build:electron": "electron-builder",
    "build:linux:app": "npm run build -- --linux --dir",
    "build:linux:appimage": "npm run build -- --linux AppImage && npm run clean:postbuild",
    "build:mac:app": "npm run build -- --mac --dir && npm run clean:postbuild",
    "build:mac:dmg": "npm run build -- --mac dmg && npm run clean:postbuild",
    "build:win:app": "npm run build -- --win --dir && npm run clean:postbuild",
    "build:win:nsis": "npm run build -- --win nsis && npm run clean:postbuild",
    "clean:postbuild": "rimraf dist/desktop-main.js dist/desktop-main.js.map dist/preload.js dist/preload.js.map dist/dist-desktop",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "preview": "vite preview --outDir dist-web",
    "prebuild": "vite build && vite build --config vite.preload.config.ts",
    "reload-and-prebuild": "rimraf dist && npm run prebuild",
    "sanitize-assets": "node ../../packages/anarchy-shared/ScriptUtils/SanitizeAssets.js ./assets",
    "start": "npm run reload-and-prebuild && electron .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "showcases-core": "*"
  },
  "devDependencies": {
    "anarchy-shared": "*",
    "electron": "37.2.1",
    "electron-builder": "26.0.12",
    "electron-reloader": "1.2.3",
    "rollup-plugin-copy": "3.5.0",
    "showcases-shared": "*",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4"
  },
  "build": {
    "appId": "com.anarchy.showcases.demo.desktop",
    "productName": "AnarchyDemo",
    "publish": [
      {
        "provider": "github",
        "owner": "ADD-YOUR-GITHUB-USERNAME",
        "repo": "ADD-YOUR-REPO-NAME",
        "private": false
      }
    ],
    "copyright": "Copyright © 20XX ADD YOUR NAME",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "./legal/**",
      "CHANGELOG.md",
      "NOTICE.md",
      "LICENSE",
      "README.md",
      "dist/dist-desktop/**",
      "dist/desktop-main.js",
      "dist/preload.js",
      "!dist/package.json"
    ],
    "asar": true,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "category": "public.app-category.games",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico",
      "signtoolOptions": {
        "signingHashAlgorithms": [
          "sha256"
        ],
        "timeStampServer": "http://timestamp.sectigo.com"
      },
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage",
        "tar.gz"
      ],
      "icon": "assets/icon.png",
      "maintainer": "ADD YOUR NAME <ADD YOUR EMAIL>",
      "synopsis": "ADD YOUR GAME SYNOPSIS",
      "description": "ADD YOUR GAME DESCRIPTION",
      "category": "Game",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
