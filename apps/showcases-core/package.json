{
  "name": "showcases-core",
  "author": "S. Panfilov",
  "private": true,
  "version": "2.9.0",
  "type": "module",
  "license": "MIT",
  "description": "Anarchy Showcases Core â€“ an application with demos for Anarchy-Engine.",
  "keywords": [
    "anarchy",
    "showcases",
    "anarchy-showcases"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist-web/"
  ],
  "scripts": {
    "before:release": "npm run before:release:check && npm run sanitize-assets && npm run generate:legal",
    "before:release:check": "npm run ts:check && npm run prettier:check && npm run lint",
    "build": "rimraf dist-desktop dist-mobile dist-web && vite build",
    "build:desktop": "npm run build -- --mode production.desktop",
    "build:mobile": "npm run build -- --mode production.mobile",
    "build:web": "npm run build -- --mode production.web",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom && npm run prettier && npm run copy:legal-to-public",
    "generate:legal:3rd-party-licenses": "npm run -w anarchy-legal generate:licenses -- --workspace apps/showcases-core --out ../../apps/showcases-core/legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w anarchy-legal generate:files -- --workspace apps/showcases-core --out ../../apps/showcases-core",
    "generate:legal:notice": "npm run -w anarchy-legal generate:notice -- --audit --strict --workspace apps/showcases-core --source ../../apps/showcases-core/legal/THIRD_PARTY_LICENSES.md --out ../../apps/showcases-core/legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "copy:legal-to-public": "node ../../packages/anarchy-shared/ScriptUtils/CopyDir.js from=./legal to=./public/legal",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "preview": "vite preview --outDir dist-web",
    "sanitize-assets": "node ../../packages/anarchy-shared/ScriptUtils/SanitizeAssets.js ./public",
    "start:dev": "vite --mode dev",
    "start:e2e": "vite --mode e2e --port 5073 --logLevel error",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "anarchy-engine": "*",
    "anarchy-i18n": "*",
    "anarchy-shared": "*",
    "lil-gui": "0.20.0",
    "rxjs": "7.8.2",
    "sanitize.css": "13.0.0",
    "showcases-menu": "*",
    "showcases-shared": "*",
    "stats.js": "0.17.0",
    "three-viewport-gizmo": "2.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "6.0.1",
    "@vitejs/plugin-vue-jsx": "5.0.1",
    "sass-embedded": "1.89.2"
  }
}
