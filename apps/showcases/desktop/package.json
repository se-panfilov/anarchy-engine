{
  "name": "anarchy_engine_showcases_desktop",
  "author": "S. Panfilov",
  "private": true,
  "version": "1.6.0",
  "description": "Desktop application for Anarchy Engine showcases",
  "main": "dist/electron-main.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "npm run reload-and-prebuild && npm run build:electron --",
    "build:mac": "npm run build -- --mac --x64 --arm64 --universal && npm run clean:postbuild",
    "build:win": "npm run build -- --win --x64 --arm64 && npm run clean:postbuild",
    "build:linux": "npm run build -- --linux --x64 --arm64 && npm run clean:postbuild",
    "build:all": "npm run build -- --mac --win --linux --x64 --arm64 --universal && npm run clean:postbuild",
    "build:dev": "npm run reload-and-prebuild && npm start",
    "build:electron": "electron-builder",
    "build:linux:app": "npm run build -- --linux --dir",
    "build:linux:appimage": "npm run build -- --linux AppImage && npm run clean:postbuild",
    "build:mac:app": "npm run build -- --mac --dir && npm run clean:postbuild",
    "build:mac:dmg": "npm run build -- --mac dmg && npm run clean:postbuild",
    "build:win:app": "npm run build -- --win --dir && npm run clean:postbuild",
    "build:win:nsis": "npm run build -- --win nsis && npm run clean:postbuild",
    "generate:versions-file": "node ../../../packages/shared/ScriptUtils/GenerateVersionsFile.js  --out=src/Generated/versions.ts",
    "clean": "rimraf dist && rimraf dist-app",
    "clean:postbuild": "rimraf dist/electron-main.js dist/electron-main.js.map dist/preload.js dist/preload.js.map",
    "copy:dist-app": "node ../../../packages/shared/ScriptUtils/CopyDir.js -- from=../dist-desktop to=dist-app",
    "copy:draco": "node ../../../packages/shared/ScriptUtils/CopyFiles.js ../../../node_modules/three/examples/jsm/libs/draco/draco_decoder.js ../../../node_modules/three/examples/jsm/libs/draco/draco_wasm_wrapper.js ../../../node_modules/three/examples/jsm/libs/draco/draco_decoder.wasm to=dist-app/three/examples/jsm/libs/draco/",
    "prebuild": "npm run prebuild:ts && npm run prebuild:preload",
    "prebuild:preload": "tsc -p tsconfig.preload.json",
    "prebuild:ts": "npm run generate:versions-file && tsc",
    "reload-and-prebuild": "npm run reload:dist-app && npm run prebuild",
    "reload:dist-app": "npm run clean && npm run copy:dist-app && npm run copy:draco",
    "start": "npm run reload-and-prebuild && electron ."
  },
  "dependencies": {
    "electron": "37.2.1",
    "electron-builder": "26.0.12",
    "electron-reloader": "1.2.3"
  },
  "devDependencies": {
    "typescript": "5.8.3"
  },
  "build": {
    "appId": "com.anarchy.showcases.demo.desktop",
    "productName": "AnarchyDemo",
    "publish": [
      {
        "provider": "github",
        "owner": "ADD-YOUR-GITHUB-USERNAME",
        "repo": "ADD-YOUR-REPO-NAME",
        "private": false
      }
    ],
    "copyright": "Copyright Â© 20XX ADD YOUR NAME",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "dist-app/**",
      "dist/electron-main.js",
      "dist/preload.js"
    ],
    "asar": true,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "category": "public.app-category.games",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico",
      "signtoolOptions": {
        "signingHashAlgorithms": [
          "sha256"
        ],
        "timeStampServer": "http://timestamp.sectigo.com"
      },
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage",
        "tar.gz"
      ],
      "icon": "assets/icon.png",
      "maintainer": "ADD YOUR NAME <ADD YOUR EMAIL>",
      "synopsis": "ADD YOUR GAME SYNOPSIS",
      "description": "ADD YOUR GAME DESCRIPTION",
      "category": "Game",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
