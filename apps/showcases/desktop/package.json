{
  "name": "anarchy_engine_showcases_desktop",
  "author": "S. Panfilov",
  "private": true,
  "version": "1.2.0",
  "description": "Desktop application for Anarchy Engine showcases",
  "main": "dist/electron-main.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "npm run prebuild:ts && prebuild:preload",
    "build:all": "rimraf dist && rimraf game-dist && npm run copy:game-dist && npm run build && electron-builder",
    "copy:game-dist": "node ../../../packages/shared/ScriptUtils/CopyDir.js -- from=../dist to=game-dist",
    "prebuild:preload": "tsc -p tsconfig.preload.json",
    "prebuild:ts": "tsc",
    "start": "npm run build && electron ."
  },
  "devDependencies": {
    "electron": "37.2.1",
    "electron-builder": "26.0.12",
    "electron-reloader": "1.2.3",
    "typescript": "5.8.3"
  },
  "build": {
    "appId": "com.anarcy.showcases.demo.desktop",
    "productName": "MyGame",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "dist/electron-main.js",
      "dist/preload.js",
      "game-dist/**"
    ],
    "asar": true,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "icon": "assets/icon.png"
    }
  }
}
