{
  "name": "anarchy_engine_showcases",
  "author": "S. Panfilov",
  "private": true,
  "version": "2.7.3",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "before:release": "npm run before:release:check && npm run generate:license-report && npm run generate:all-licenses-list && npm run sanitize-assets",
    "before:release:check": "npm run ts:check && npm run prettier:check && npm run lint",
    "build": "rimraf dist-desktop dist-mobile dist-web && vite build",
    "build:desktop": "npm run build -- --mode production.desktop",
    "build:mobile": "npm run build -- --mode production.mobile",
    "build:web": "npm run build -- --mode production.web",
    "generate:all-licenses-list": "yarn licenses generate-disclaimer > THIRD_PARTY_LICENSES_FULL.txt",
    "generate:license-report": "npm install -g license-report && license-report --only=prod --output=markdown --department.value='Game Engine' --relatedTo.value='Runtime dependencies' --exclude=anarchy-shared > THIRD_PARTY_LICENSES.md",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "preview": "vite preview --outDir dist-web",
    "sanitize-assets": "node ../../packages/anarchy-shared/ScriptUtils/SanitizeAssets.js ./public",
    "start:dev": "vite --mode dev",
    "start:e2e": "vite --mode e2e --port 5073 --logLevel error",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "anarchy-engine": "*",
    "anarchy-shared": "*",
    "showcases-menu": "*",
    "showcases-shared": "*",
    "anarchy-i18n": "*",
    "lil-gui": "0.20.0",
    "rxjs": "7.8.2",
    "sanitize.css": "13.0.0",
    "stats.js": "0.17.0",
    "three-viewport-gizmo": "2.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "6.0.1",
    "@vitejs/plugin-vue-jsx": "5.0.1",
    "sass-embedded": "1.89.2"
  }
}
