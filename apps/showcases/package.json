{
  "name": "anarchy_engine_showcases",
  "author": "S. Panfilov",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "before:release": "npm run clean:reinstall && npm run before:release:check && npm run generate:license-report && npm run generate:all-licenses-list",
    "before:release:check": "npm run ts:check && npm run prettier:check && npm run lint",
    "build": "rimraf ./dist && vite build",
    "build:desktop": "electron-builder",
    "build:mobile": "npx cap copy",
    "generate:all-licenses-list": "yarn licenses generate-disclaimer > THIRD_PARTY_LICENSES_FULL.txt",
    "generate:license-report": "npm install -g license-report && license-report --only=prod --output=markdown --department.value='Game Engine' --relatedTo.value='Runtime dependencies' --exclude=anarchy_engine_shared > THIRD_PARTY_LICENSES.md",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "preview": "vite preview",
    "sanitize-assets": "node ../../packages/shared/ScriptUtils/SanitizeAssets.js",
    "start:dev": "vite --mode dev",
    "start:e2e": "vite --mode e2e --port 5073 --logLevel error",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "anarchy_engine": "*",
    "anarchy_engine_shared": "*",
    "lil-gui": "0.20.0",
    "sanitize.css": "13.0.0",
    "stats.js": "0.17.0",
    "three-viewport-gizmo": "2.2.0"
  },
  "devDependencies": {
    "concurrently": "9.2.0",
    "electron": "37.2.0",
    "electron-builder": "26.0.12",
    "wait-on": "8.0.3"
  }
}
