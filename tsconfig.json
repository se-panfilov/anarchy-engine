{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client", "three"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@Engine/*": ["./src/Engine/*"],
      "@App/*": ["./src/App/*"]
    }
  },
  "include": ["src"]
}
