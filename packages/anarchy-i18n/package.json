{
  "name": "@hellpig/anarchy-i18n",
  "author": "S. Panfilov",
  "private": false,
  "version": "1.4.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:se-panfilov/anarchy-engine.git",
    "directory": "packages/anarchy-i18n"
  },
  "homepage": "https://github.com/se-panfilov/anarchy-engine/tree/main/packages/anarchy-i18n#readme",
  "bugs": {
    "url": "https://github.com/se-panfilov/anarchy-engine/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    },
    "./assets/*": "./dist/assets/*"
  },
  "license": "MIT",
  "description": "Anarchy-I18n â€“ a library for internationalization in Anarchy Engine.",
  "keywords": [
    "anarchy",
    "hellpig",
    "anarchy-engine",
    "i18n",
    "anarchy-i18n",
    "internationalization",
    "localization",
    "language"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "scripts": {
    "build": "rimraf ./dist && vite build",
    "check:circular-dependencies": "npx dpdm -T --no-warning --no-tree --exit-code circular:1 ./src/index.ts",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom",
    "generate:legal:3rd-party-licenses": "npm run -w @hellpig/anarchy-legal generate:licenses -- --workspace packages/anarchy-i18n --out ../../packages/anarchy-i18n/legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w @hellpig/anarchy-legal generate:files -- --workspace packages/anarchy-i18n --out ../../packages/anarchy-i18n",
    "generate:legal:notice": "npm run -w @hellpig/anarchy-legal generate:notice -- --audit --strict --workspace packages/anarchy-i18n --source ../../packages/anarchy-i18n/legal/THIRD_PARTY_LICENSES.md --out ../../packages/anarchy-i18n/legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "generate:locales": "node Scripts/GenerateLocales.js --config src/Configs/locales.config.jsonc --out-const src/Constants/Locales.gen.ts --out-models src/Models/TLocales.gen.ts",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "pr:guard:ci": "npm run ts:check && npm run check:circular-dependencies && npm run lint",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@formatjs/intl": "4.0.7",
    "rxjs": "7.8.2"
  },
  "devDependencies": {
    "rollup-plugin-terser": "7.0.2"
  }
}
