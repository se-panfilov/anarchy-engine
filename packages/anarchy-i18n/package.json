{
  "name": "anarchy-i18n",
  "author": "S. Panfilov",
  "private": true,
  "version": "1.1.3",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "description": "Anarchy-I18n â€“ a library for internationalization in Anarchy Engine.",
  "keywords": [
    "anarchy",
    "anarchy-engine",
    "i18n",
    "anarchy-i18n",
    "internationalization",
    "localization",
    "language"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "scripts": {
    "before:release": "npm run before:release:check && npm run generate:legal",
    "before:release:check": "npm run ts:check && npm run prettier:check && npm run lint",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom",
    "generate:legal:3rd-party-licenses": "npm run -w anarchy-legal generate:licenses -- --workspace packages/anarchy-i18n --out ../../packages/anarchy-i18n/legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w anarchy-legal generate:files -- --workspace packages/anarchy-i18n --out ../../packages/anarchy-i18n",
    "generate:legal:notice": "npm run -w anarchy-legal generate:notice -- --audit --strict --workspace packages/anarchy-i18n --source ../../packages/anarchy-i18n/legal/THIRD_PARTY_LICENSES.md --out ../../packages/anarchy-i18n/legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "generate:locales": "node Scripts/GenerateLocales.js --config src/Configs/locales.config.jsonc --out-const src/Constants/Locales.gen.ts --out-models src/Models/TLocales.gen.ts",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@formatjs/intl": "3.1.6",
    "rxjs": "7.8.2"
  }
}
