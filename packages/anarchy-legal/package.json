{
  "name": "anarchy-legal",
  "author": "S. Panfilov",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "generate:licenses": "node ./src/Builders/LicensesBuilder.ts",
    "before:release": "npm run before:release:check && npm run generate:third-party-list && npm run generate:licenses",
    "before:release:check": "npm run ts:check && npm run prettier:check && npm run lint",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "devDependencies": {
    "@types/yargs": "17.0.33",
    "globby": "14.1.0",
    "yargs": "18.0.0"
  }
}
