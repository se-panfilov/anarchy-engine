{
  "name": "@hellpig/anarchy-legal",
  "author": "S. Panfilov",
  "private": false,
  "version": "1.11.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:se-panfilov/anarchy-engine.git",
    "directory": "packages/anarchy-legal"
  },
  "homepage": "https://github.com/se-panfilov/anarchy-engine/tree/main/packages/anarchy-legal#readme",
  "bugs": {
    "url": "https://github.com/se-panfilov/anarchy-engine/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "license": "MIT",
  "description": "Anarchy-legal â€“ a library for generating legal files for Anarchy Engine.",
  "keywords": [
    "anarchy",
    "hellpig",
    "anarchy-engine",
    "anarchy-legal",
    "legal",
    "license",
    "eula",
    "privacy"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rimraf ./dist && vite build",
    "check:circular-dependencies": "npx dpdm -T --no-warning --no-tree --exit-code circular:1 ./src/index.ts",
    "generate:files": "node ./src/Generators/LegalFilesGenerator.ts",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom",
    "generate:legal:3rd-party-licenses": "npm run -w @hellpig/anarchy-legal generate:licenses -- --workspace packages/anarchy-legal --out ./legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w @hellpig/anarchy-legal generate:files -- --workspace packages/anarchy-legal --out ./",
    "generate:legal:notice": "npm run -w @hellpig/anarchy-legal generate:notice -- --audit --strict --workspace packages/anarchy-legal --source ./legal/THIRD_PARTY_LICENSES.md --out ./legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "generate:licenses": "node src/Generators/ThirdPartyLicensesGenerator.ts",
    "generate:notice": "node src/Generators/NoticeGenerator.ts",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "pr:guard:ci": "npm run ts:check && npm run check:circular-dependencies && npm run lint",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit",
    "unit": "vitest run",
    "unit:coverage": "vitest run --coverage",
    "unit:coverage:ui": "vitest --ui",
    "unit:watch": "vitest"
  },
  "devDependencies": {
    "@date-fns/utc": "2.1.1",
    "@types/yargs": "17.0.35",
    "date-fns": "4.1.0",
    "globby": "16.1.0",
    "yargs": "18.0.0"
  }
}
