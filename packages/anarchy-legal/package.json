{
  "name": "anarchy-legal",
  "author": "S. Panfilov",
  "private": true,
  "version": "1.10.2",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "description": "Anarchy-legal â€“ a library for generating legal files for Anarchy Engine.",
  "keywords": [
    "anarchy",
    "anarchy-engine",
    "anarchy-legal",
    "legal",
    "license",
    "eula",
    "privacy"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "scripts": {
    "before:release": "npm run before:release:check",
    "before:release:check": "npm run ts:check && npm run prettier:check && npm run lint",
    "generate:files": "node ./src/Generators/LegalFilesGenerator.ts",
    "generate:licenses": "node src/Generators/ThirdPartyLicensesGenerator.ts",
    "generate:notice": "node src/Generators/NoticeGenerator.ts",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "devDependencies": {
    "@date-fns/utc": "2.1.1",
    "@types/yargs": "17.0.33",
    "date-fns": "4.1.0",
    "globby": "14.1.0",
    "yargs": "18.0.0"
  }
}
