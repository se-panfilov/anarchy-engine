{
  "name": "anarchy_engine_e2e",
  "author": "S. Panfilov",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "before:release": "npm run clean:reinstall && npm run before:release:check",
    "before:release:check": "npm run ts:check && npm run prettier:check && npm run lint && npm run e2e:with-clean",
    "e2e": "playwright test",
    "e2e:clean-metadate": "node ../shared/ScriptUtils/PostprocessScreenshots.js",
    "e2e:debug": "PWDEBUG=1 npx playwright test",
    "e2e:debug:ui": "npx playwright test --ui",
    "e2e:headed": "npm run e2e -- --headed",
    "e2e:show-report": "playwright show-report reports/e2e/playwright-report",
    "e2e:update": "npm run e2e -- --update-snapshots",
    "e2e:with-clean": "playwright test && npm run e2e:clean-metadate",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "start:e2e-server": "cd ../../ && npm run start:e2e --workspace=apps/showcases",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "anarchy_engine": "*",
    "anarchy_engine_shared": "*",
    "playwright": "1.53.1"
  },
  "devDependencies": {
    "@playwright/test": "1.53.1"
  }
}
