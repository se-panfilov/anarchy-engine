{
  "name": "anarchy-tracking",
  "author": "S. Panfilov",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "description": "Anarchy-Tracking â€“ a library error monitoring in Anarchy Engine's based projects.",
  "keywords": [
    "anarchy",
    "anarchy-engine",
    "tracking",
    "anarchy-tracking"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "scripts": {
    "before:release": "npm run before:release:check",
    "before:release:check": "npm run ts:check && npm run check:circular-dependencies && npm run lint",
    "check:circular-dependencies": "npx dpdm -T --no-warning --no-tree --exit-code circular:1 ./src/index.ts",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom",
    "generate:legal:3rd-party-licenses": "npm run -w anarchy-legal generate:licenses -- --workspace packages/anarchy-tracking --out ../../packages/anarchy-tracking/legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w anarchy-legal generate:files -- --workspace packages/anarchy-tracking --out ../../packages/anarchy-tracking",
    "generate:legal:notice": "npm run -w anarchy-legal generate:notice -- --audit --strict --workspace packages/anarchy-tracking --source ../../packages/anarchy-tracking/legal/THIRD_PARTY_LICENSES.md --out ../../packages/anarchy-tracking/legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@sentry/browser": "10.17.0",
    "@sentry/cli": "2.56.1",
    "@sentry/electron": "7.1.1",
    "dotenv": "17.2.2"
  }
}
