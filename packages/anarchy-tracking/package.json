{
  "name": "@hellpig/anarchy-tracking",
  "author": "S. Panfilov",
  "private": false,
  "version": "1.6.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:se-panfilov/anarchy-engine.git",
    "directory": "packages/anarchy-tracking"
  },
  "homepage": "https://github.com/se-panfilov/anarchy-engine/tree/main/packages/anarchy-tracking#readme",
  "bugs": {
    "url": "https://github.com/se-panfilov/anarchy-engine/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "license": "MIT",
  "description": "Anarchy-Tracking â€“ a library error monitoring in Anarchy Engine's based projects.",
  "keywords": [
    "anarchy",
    "hellpig",
    "anarchy-engine",
    "tracking",
    "anarchy-tracking"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "main": "./dist/anarchy-tracking.es.js",
  "module": "./dist/anarchy-tracking.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/anarchy-tracking.es.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.es.js"
    },
    "./desktop": {
      "types": "./dist/desktop.d.ts",
      "import": "./dist/desktop.es.js"
    },
    "./desktop-preload": {
      "types": "./dist/desktop-preload.d.ts",
      "import": "./dist/desktop-preload.es.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "browser": [
        "./dist/browser.d.ts"
      ],
      "desktop": [
        "./dist/desktop.d.ts"
      ],
      "desktop-preload": [
        "./dist/desktop-preload.d.ts"
      ],
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "rimraf ./dist && vite build",
    "check:circular-dependencies": "npx dpdm -T --no-warning --no-tree --exit-code circular:1 ./src/index.ts",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom",
    "generate:legal:3rd-party-licenses": "npm run -w @hellpig/anarchy-legal generate:licenses -- --workspace packages/anarchy-tracking --out ../../packages/anarchy-tracking/legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w @hellpig/anarchy-legal generate:files -- --workspace packages/anarchy-tracking --out ../../packages/anarchy-tracking",
    "generate:legal:notice": "npm run -w @hellpig/anarchy-legal generate:notice -- --audit --strict --workspace packages/anarchy-tracking --source ../../packages/anarchy-tracking/legal/THIRD_PARTY_LICENSES.md --out ../../packages/anarchy-tracking/legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "pr:guard:ci": "npm run ts:check && npm run check:circular-dependencies && npm run lint",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@sentry/browser": "10.32.1",
    "@sentry/electron": "7.5.0",
    "dotenv": "17.2.3"
  },
  "devDependencies": {
    "rollup-plugin-terser": "7.0.2",
    "@sentry/cli": "3.0.1"
  }
}
