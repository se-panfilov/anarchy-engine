{
  "name": "anarchy-shared",
  "author": "S. Panfilov",
  "private": true,
  "version": "1.4.3",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "description": "Anarchy-shared â€“ a library with shared utilities and scripts for Anarchy Engine.",
  "keywords": [
    "anarchy",
    "anarchy-engine",
    "anarchy-shared"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "scripts": {
    "before:release": "npm run before:release:check",
    "before:release:check": "npm run ts:check && npm run lint && npm run unit:coverage",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom",
    "generate:legal:3rd-party-licenses": "npm run -w anarchy-legal generate:licenses -- --workspace packages/anarchy-shared --out ../../packages/anarchy-shared/legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w anarchy-legal generate:files -- --workspace packages/anarchy-shared --out ../../packages/anarchy-shared",
    "generate:legal:notice": "npm run -w anarchy-legal generate:notice -- --audit --strict --workspace packages/anarchy-shared --source ../../packages/anarchy-shared/legal/THIRD_PARTY_LICENSES.md --out ../../packages/anarchy-shared/legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit",
    "unit": "vitest run",
    "unit:coverage": "vitest run --coverage",
    "unit:coverage:ui": "vitest --ui",
    "unit:watch": "vitest"
  },
  "dependencies": {
    "bowser": "2.12.1"
  },
  "devDependencies": {
    "fast-glob": "3.3.3",
    "fs-extra": "11.3.2",
    "png-to-ico": "3.0.1",
    "sharp": "0.34.4",
    "svgo": "4.0.0",
    "ts-json-schema-generator": "2.4.0"
  }
}
