{
  "name": "@hellpig/anarchy-shared",
  "author": "S. Panfilov",
  "private": false,
  "version": "1.5.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:se-panfilov/anarchy-engine.git",
    "directory": "packages/anarchy-shared"
  },
  "homepage": "https://github.com/se-panfilov/anarchy-engine/tree/main/packages/anarchy-shared#readme",
  "bugs": {
    "url": "https://github.com/se-panfilov/anarchy-engine/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "license": "MIT",
  "description": "Anarchy-shared â€“ a library with shared utilities and scripts for Anarchy Engine.",
  "keywords": [
    "anarchy",
    "hellpig",
    "anarchy-engine",
    "anarchy-shared"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "exports": {
    "./Utils": {
      "types": "./dist/Utils/index.d.ts",
      "import": "./dist/Utils/index.es.js"
    },
    "./Constants": {
      "types": "./dist/Constants/index.d.ts",
      "import": "./dist/Constants/index.es.js"
    },
    "./Models": {
      "types": "./dist/Models/index.d.ts",
      "import": "./dist/Models/index.es.js"
    },
    "./Plugins": {
      "types": "./dist/Plugins/index.d.ts",
      "import": "./dist/Plugins/index.es.js"
    },
    "./assets": {
      "types": "./dist/assets/index.d.ts",
      "import": "./dist/assets/index.es.js"
    },
    "./assets/*": "./src/assets/*",
    "./ScriptUtils/*": "./ScriptUtils/*"
  },
  "scripts": {
    "build": "rimraf ./dist && vite build",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom",
    "generate:legal:3rd-party-licenses": "npm run -w @hellpig/anarchy-legal generate:licenses -- --workspace packages/anarchy-shared --out ../../packages/anarchy-shared/legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w @hellpig/anarchy-legal generate:files -- --workspace packages/anarchy-shared --out ../../packages/anarchy-shared",
    "generate:legal:notice": "npm run -w @hellpig/anarchy-legal generate:notice -- --audit --strict --workspace packages/anarchy-shared --source ../../packages/anarchy-shared/legal/THIRD_PARTY_LICENSES.md --out ../../packages/anarchy-shared/legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "pr:guard:ci": "npm run ts:check && npm run lint && npm run unit:coverage",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit",
    "unit": "vitest run",
    "unit:coverage": "vitest run --coverage",
    "unit:coverage:ui": "vitest --ui",
    "unit:watch": "vitest"
  },
  "dependencies": {
    "bowser": "2.13.1"
  },
  "devDependencies": {
    "fast-glob": "3.3.3",
    "fs-extra": "11.3.3",
    "png-to-ico": "3.0.1",
    "sharp": "0.34.5",
    "svgo": "4.0.0",
    "ts-json-schema-generator": "2.4.0",
    "vite-plugin-static-copy": "3.1.4"
  }
}
