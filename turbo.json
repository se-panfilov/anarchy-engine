{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [".env", ".env.*", "tsconfig.base.json", "turbo.json"],
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "outputs": [],
      "dependsOn": ["build"]
    },
    "e2e": {
      "outputs": [],
      "dependsOn": ["dev"],
      "cache": false
    },
    "lint": {
      "outputs": [],
      "dependsOn": ["^lint"]
    },
    "format": {
      "outputs": []
    }
  }
}
